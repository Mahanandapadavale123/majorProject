<% layout("/layout/boilerplate") %>

<div class="row">
  <div class="col-8 offset-2">
    <h3><li><%= listing.title %></li></h3>
    <div class="card col-6 offser-3 show-card">
      <img
        src="<%= listing.image %>"
        class="card-img-top show-img"
        alt="listing_image"
      />
      <div class="card-body">
        <p class="card-text">
          <li><%= listing.description %></li>

          <li>&#x20B9; <%= listing.price%></li>

          <li><%= listing.location %></li>

          <li><%= listing.country%></li>
        </p>
      </div>
    </div>

    <div class="btns">
      <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark"
        >Edit this Listing</a
      ><br />
      <br />
      <form method="post" action="/listings/ <%= listing._id %>? method=DELETE">
        <button>Delete</button>
      </form>
    </div>
    <div class="col-8 offset-3">
      <h4>Leave a Review</h4>
      <form action="/listing/ <%= listing._id %>/review" method="post">
        <div class="mb-3">
          <label for="rating">Rating</label>
          <input
            type="range"
            min="1"
            max="5"
            id="rating"
            name="review[rating]"
            class="form-range"
          />
        </div>
        <div class="mb-3">
          <label for="comments">Comments</label>
          <textarea
            name="review comment"
            id=""
            col="25"
            rows="5"
            class="form-control"
            required
          ></textarea>
        </div>
        <br />
        <button class="btn btn-outline-dark">Submit</button>
      </form>
      <hr />
      <h4>All Reviews</h4>
      <div class="row">
        <% for(review of listing.reviews) { %>
        <div class="card col-6 mb-3">
          <div class="card-body">
            <h5 class="card-title">Mahii</h5>
            <p class="card-text">review.comment</p>
            <p class="card-text">review.rating</p>
          </div>
          <form action="">
            <button class="btn btn-dark">Delete</button>
          </form>
        </div>
        <% } %>
      </div>
      <p><%= listing.reviews %></p>
    </div>
  </div>
</div>
