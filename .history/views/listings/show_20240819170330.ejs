<% layout("/layout/boilerplate") %>

<div class="row">
    <div class="col-8 offset-2">
    
    <h3><li> <%= listing.title %></li></h3>
    <div class="card col-6 offser-3 show-card">
        <img src="<%= listing.image %>" 
        class="card-img-top show-img"
        alt="listing_image"
        >
        <div class="card-body">
            <p class="card-text">
                <li><%= listing.description %></li>
    <li>&#x20B9; <%= listing.price.toLocaleString("en-IN") %></li>
    <li><%= listing.location %></li>
    <li><%= listing.country%></li>

            </p>
        </div>
    </div>


<div class="btns">

<a href="/listings/<%= listing._id %>/edit"
    class="btn btn-dark"
    >Edit this Listing</a><br> <br>
<form  method="post" action="/listings/ <%= listing._id %>? method=DELETE">
    <button>Delete</button>
</form>
</div>
<div class="col-8 offset-3">
    <br><br>

    <h4>Leave a Review</h4>
    <form action="">
        <div>
            <label for="rating">Rating</label>
            <input type="range" min="1" max="5" id="rating" name="review[rating]" >

        </div>
        <div>
<label for="comments">Comments</label>
<textarea name="review comment" id="" col="25" rows="5" class="form-control"></textarea>
        </div>
        <button class="btn btn-outline-dark">Submit</button>
    </form>
</div>

</div>
